        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="KodiIL Repository">
        <dir>
		<info compressed="false">https://raw.githubusercontent.com/Kodiman112/kodisrael/refs/heads/main/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/Kodiman112/kodisrael/refs/heads/main/addons.xml.md5</checksum>
